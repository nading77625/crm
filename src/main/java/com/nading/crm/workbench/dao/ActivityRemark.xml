<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nading.crm.workbench.dao.ActivityRemark">

        <select id="getCountByAids" resultType="int">
            select  count(*) from tbl_activity_remark
            where activityId in
            <foreach collection="array" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </select>
    <delete id="deleteByAids">
        delete from tbl_activity_remark
        where activityId in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}
        </foreach>
    </delete>

    <select id="getRemarkListByAid" resultType="ActivityRemark">
        select * from tbl_activity_remark where activityId=#{id}
    </select>
    <delete id="deleteRemark">
        delete from tbl_activity_remark where id = #{id}
    </delete>

    <insert id="saveRemark">
        insert into tbl_activity_remark values (#{id},#{noteContent},#{createTime},#{createBy},#{editTime},#{editBy},#{editFlag},#{activityId})
    </insert>
</mapper>
